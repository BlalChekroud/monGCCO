{% extends 'base.html.twig' %}

{% block title %}Ice index{% endblock %}

{% block body %}
    <h1>Ice index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ice in ices %}
            <tr>
                <td>{{ ice.id }}</td>
                <td>{{ ice.label }}</td>
                <td>{{ ice.createdAt ? ice.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ ice.updatedAt ? ice.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_ice_show', {'id': ice.id}) }}">show</a>
                    <a href="{{ path('app_ice_edit', {'id': ice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ice_new') }}">Create new</a>
{% endblock %}
