{% extends 'base.html.twig' %}

{% block title %}Importation CSV{% endblock %}

{% block body %}
<main id="main" class="main">

    <div class="pagetitle">
      <h1>Importation des données depuis un fichier CSV</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_bird_family_index') }}">Gestion des espèces</a></li>
          <li class="breadcrumb-item active">Importation CSV</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-8">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Sélectionnez un fichier CSV à importer :</h5>

                        {{ form_start(form) }}
                            {{ form_row(form.csvFile) }}

                            <button type="submit" class="btn btn-outline-primary bi bi-upload"> Importer</button>
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>
    </section>
</main>
{% endblock %}
