{% if is_granted('ROLE_ADMIN') %}
<form method="post" action="{{ path('app_bird_species_delete', {'id': bird_specy.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bird_specy.id) }}">
    <button class="btn-action btn btn-outline-danger btn-sm bi bi-x-circle-fill mx-2"> Supprimer</button>
</form>
{% endif %}