{% extends 'base.html.twig' %}

{% block title %}Modifier un état de campagne{% endblock %}

{% block body %}
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Modifier un état de campagne</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_campaign_status_index') }}">Gestion des états de campagne</a></li>
          <li class="breadcrumb-item active">Modification</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8 col-xl-8">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Les nouvelles informations sur l'état</h5>

              {{ include('campaign_status/_form.html.twig') }}

            </div>
            <div class="card-footer">
              <div class="d-flex justify-content-between">
                <div>
                    <a href="{{ path('app_campaign_status_index') }}" class="btn btn-sm btn-outline-secondary mx-1" title="Retour vers la consultation des état de campagne">Retour</a>
                </div>
                <div class="d-flex justify-content-end">
                    {{ include('campaign_status/_delete_form.html.twig') }}
                </div>
              </div>
            </div>
          </div>

        </div>

      </div>
    </section>

  </main><!-- End #main -->
{% endblock %}
