{% extends 'base.html.twig' %}

{% block title %}Région{% endblock %}

{% block body %}
<main id="main" class="main">

    <div class="pagetitle">
      <h1>Détail de la région</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_region_index') }}">Gestion des régions</a></li>
          <li class="breadcrumb-item active">Détail</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                     <div id="printableArea">
                        <h5 class="card-title">Détail</h5>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Nom de la région :</th>
                                    <td>{{ region.name }}</td>
                                </tr>
                                <tr>
                                    <th>Code de la région :</th>
                                    <td>{{ region.regionCode }}</td>
                                </tr>
                                <tr>
                                    <th>Pays :</th>
                                    <td>{{ region.country.name }}</td>
                                </tr>
                                <tr>
                                    <th>Les villes :</th>
                                    <td>
                                        {% if region.cities|length > 0 %}
                                            {% set sorted_cities = region.cities|sort((a, b) => a.name <=> b.name) %}
                                            <ul>
                                                {% for city in sorted_cities %}
                                                    <li>{{ city.name }}</li>
                                                {% endfor %}
                                            </ul>
                                        {% else %}
                                            <p>Aucune ville</p>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Crée le</th>
                                    <td>{{ region.createdAt ? region.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Dernière mise à jour le</th>
                                    <td>{{ region.updatedAt ? region.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
                     </div>

                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <div>
                            <a href="{{ path('app_region_index') }}" class="btn btn-sm btn-outline-secondary mx-1" title="Retour vers la consultation des régions">Retour</a>
                            <a href="{{ path('app_region_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Ajouter une région</a>
                        </div>
                        <div class="d-flex justify-content-end">
                            {% import 'macros/btn_actions_macros.html.twig' as macros %}
                            {{ macros.action_buttons('app_region_new','app_region_show', 'app_region_edit', 'region/_delete_form.html.twig', region, app.request.attributes.get('_route'), true) }}
                            {{ include('region/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</main>
{% endblock %}
