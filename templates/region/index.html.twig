{% extends 'base.html.twig' %}

{% block title %}Consultation des régions{% endblock %}

{% block body %}
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Les Régions</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
          <li class="breadcrumb-item active">Gestion des régions</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
          <div class="card">
            <div class="card-body">
                <h5 class="card-title">Listes</h5>
                <div id="printableArea">
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Région</th>
                                <th>Code Région</th>
                                <th>Pays</th>
                                <th>Crée le</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for region in regions %}
                            <tr>
                                <td>{{ region.id }}</td>
                                <td>{{ region.name }}</td>
                                <td>{{ region.regionCode }}</td>
                                <td>
                                {{ region.country.name }}</td>
                                <td>{{ region.createdAt ? region.createdAt|date('d-m-Y') : '' }}</td>
                                <td>
                                    <div class="d-flex justify-content-end">
                                        {% import 'macros/btn_actions_macros.html.twig' as macros %}
                                        {{ macros.action_buttons('app_region_new','app_region_show', 'app_region_edit', 'region/_delete_form.html.twig', region, app.request.attributes.get('_route'), true) }}
                                        {{ include('region/_delete_form.html.twig') }}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">Aucun enregistrement trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>  
                </div>          
              
            </div>
            <div class="card-footer">
              <a href="{{ path('app_region_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted"> Créer une région</a>
              <a href="{{ path('app_country_index') }}" class="btn btn-outline-info btn-sm bi bi-list-task mx-1"> Consultation des pays</a>
              <a href="{{ path('app_country_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Créer pays</a>
              <a href="{{ path('app_city_index') }}" class="btn btn-outline-info btn-sm bi bi-list-task mx-1"> Consultation des villes</a>
              <a href="{{ path('app_city_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Créer une ville</a>
            </div>
          </div>

        </div>
      </div>
    </section>

    {% import 'macros/form_macros.html.twig' as form_macros %}

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    {{ form_macros.csv_import_form(form, 'app_region_index') }}
                </div>
            </div>
        </div>
    </section>

    {% if headers is defined and rows is defined %}
        {{ form_macros.csv_modal(headers, rows, csvData, 'app_region_index', ['region', 'regionCode'], ['country', 'iso2']) }}
    {% endif %}

  </main><!-- End #main -->
{% endblock %}
