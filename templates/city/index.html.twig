{% extends 'base.html.twig' %}

{% block title %}Consultation des villes{% endblock %}

{% block body %}
    <main id="main" class="main">

        <div class="pagetitle">
        <h1>Consultation des villes</h1>
        <nav>
            <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
            <li class="breadcrumb-item active">Gestion des villes</li>
            </ol>
        </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Listes</h5>

                            <div id="printableArea">
                                <!-- Table with stripped rows -->
                                <table class="table datatable">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Ville</th>
                                            <th>Latitude</th>
                                            <th>Longitude</th>
                                            <th>Crée le</th>
                                            <th>Dernière mise à jour le</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for city in cities %}
                                        <tr>
                                            <td>{{ city.id }}</td>
                                            <td>{{ city.name }}</td>
                                            <td>{{ city.latitude }}</td>
                                            <td>{{ city.longitude }}</td>
                                            <td>{{ city.createdAt ? city.createdAt|date('d-m-Y') : '' }}</td>
                                            <td>{{ city.updatedAt ? city.updatedAt|date('d-m-Y') : '' }}</td>
                                            <td>
                                                <div class="d-flex justtify-content-end">
                                                    <a href="{{ path('app_city_show', {'id': city.id}) }}">show</a>
                                                    <a href="{{ path('app_city_edit', {'id': city.id}) }}" class="btn-action bi bi-pencil-square btn btn-outline-primary btn-sm mx-2"> Modifier</a>
                                                    {{ include('city/_delete_form.html.twig') }}
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="7">Aucun enregistrement trouvé</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <!-- End Table with stripped rows -->
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justtify-content-end">
                                <a href="{{ path('app_city_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted  mx-3"> Créer une nouvelle ville</a>
                                <a href="{{ path('app_site_collection_new') }}" class="btn btn-outline-info btn-sm bi bi bi-geo-alt-fill"> Créer nouvelle site de collection</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </section>
        
        <div class="alert border-light alert-dismissible fade show" role="alert">
            <!-- Card with header and footer -->
            <div class="card">
                <div class="card-header">
                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    {{ form_row(form.csvFile) }}
                        <button type="submit" formaction="{{ path('app_city_index') }}" class="btn btn-outline-primary btn-sm bi bi-upload"> Importer CSV</button>
                    {% for error in form.csvFile.vars.errors %}
                        <div class="alert alert-danger">{{ error.message }}</div>
                    {% endfor %}
                    
                    {% for flash_error in app.flashes('error') %}
                        <div class="alert alert-danger">{{ flash_error }}</div>
                    {% endfor %}
                {{ form_end(form) }}
                </div>
                <div class="card-footer">
                    <button id="printButton" class="btn btn-light bi bi-printer"> Imprimer</button> 
                    <button type="button" class="btn btn-light"><i class="bi bi-folder"> </i>Exporter en CSV</button>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div><!-- End Card with header and footer -->
        </div>


