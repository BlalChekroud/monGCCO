{% extends 'base.html.twig' %}

{% block title %}Consultation des villes{% endblock %}

{% block body %}
    <main id="main" class="main">

        <div class="pagetitle">
        <h1>Consultation des villes</h1>
        <nav>
            <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
            <li class="breadcrumb-item active">Gestion des villes</li>
            </ol>
        </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Listes</h5>

                            <div id="printableArea">
                                <!-- Table with stripped rows -->
                                <table class="table datatable">
                                    <thead>
                                        <tr>
                                            <th>Ville</th>
                                            <th>Latitude</th>
                                            <th>Longitude</th>
                                            <th>Région</th>
                                            <th>Crée le</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for city in cities %}
                                        <tr>
                                            <td>{{ city.name }}</td>
                                            <td>{{ city.latitude }}</td>
                                            <td>{{ city.longitude }}</td>
                                            <td>{{ city.region.name }}</td>
                                            <td>{{ city.createdAt ? city.createdAt|date('d-m-Y') : '' }}</td>
                                            <td>
                                                <div class="d-flex justify-content-end">
                                                    {% import 'macros/btn_actions_macros.html.twig' as macros %}
                                                    {{ macros.action_buttons('app_city_new','app_city_show', 'app_city_edit', 'city/_delete_form.html.twig', city, app.request.attributes.get('_route'), true) }}
                                                    {{ include('city/_delete_form.html.twig') }}
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="7">Aucun enregistrement trouvé</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <!-- End Table with stripped rows -->
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('app_city_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Ajouter une ville</a>
                            <a href="{{ path('app_site_collection_index') }}" class="btn btn-outline-info btn-sm bi bi bi-list-task mx-1"> Consultation des sites</a>
                            <a href="{{ path('app_site_collection_new') }}" class="btn btn-outline-info btn-sm bi bi bi-geo-alt-fill"> Ajouter un site</a>
                            <a href="{{ path('app_region_index') }}" class="btn btn-outline-info btn-sm bi bi-list-task mx-1"> Consultation des régions</a>
                            <a href="{{ path('app_region_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Ajouter une région</a>
                            <a href="{{ path('app_country_index') }}" class="btn btn-outline-info btn-sm bi bi-list-task mx-1"> Consultation des pays</a>
                            <a href="{{ path('app_country_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Ajouter un pays</a>
                        </div>
                    </div>

                </div>
            </div>
        </section>
        {% import 'macros/form_macros.html.twig' as form_macros %}

        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        {{ form_macros.csv_import_form(form, 'app_city_index') }}
                    </div>
                </div>
            </div>
        </section>

        {% if headers is defined and rows is defined %}
            {{ form_macros.csv_modal(headers, rows, csvData, 'app_city_index', ['city', 'lat', 'lng', 'region', 'regionCode'], ['country']) }}
        {% endif %}

    </main><!-- End #main -->
{% endblock %}
