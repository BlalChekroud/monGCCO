{% extends 'base.html.twig' %}

{% block title %}Ville{% endblock %}

{% block body %}
<main id="main" class="main">

    <div class="pagetitle">
      <h1>Détails de la ville</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_city_index') }}">Gestion des villes</a></li>
          <li class="breadcrumb-item active">Détail</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                     <div id="printableArea">
                        <h5 class="card-title">Détail</h5>
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Nom de la ville :</th>
                                        <td>{{ city.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Latitude :</th>
                                        <td>{{ city.latitude }}</td>
                                    </tr>
                                    <tr>
                                        <th>Longitude :</th>
                                        <td>{{ city.longitude }}</td>
                                    </tr>
                                    <tr>
                                        <th>Pays :</th>
                                        <td>{{ city.region.country.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Région :</th>
                                        <td>{{ city.region.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Sites de collectes :</th>
                                        {% if city.siteCollections|length > 0 %}
                                            {% set sorted_sites = city.siteCollections|sort((a, b) => a.siteName <=> b.siteName) %}
                                            <ul>
                                                {% for site in sorted_sites %}
                                                    <li>{{ site.siteName }}</li>
                                                {% endfor %}
                                            </ul>
                                        {% else %}
                                        <td>Aucun site</td>
                                        {% endif %}
                                    </tr>
                                    <tr>
                                        <th>Crée le :</th>
                                        <td>{{ city.createdAt ? city.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Dernière mise à jour le</th>
                                        <td>{{ city.updatedAt ? city.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                                    </tr>
                                </tbody>
                            </table>
                     </div>

                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <div>
                            <a href="{{ path('app_city_index') }}" class="btn btn-sm btn-outline-secondary mx-1" title="Retour vers la consultation des villes">Retour</a>
                            <a href="{{ path('app_city_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Ajouter une ville</a>
                        </div>
                        <div class="d-flex justify-content-end">
                            {% import 'macros/btn_actions_macros.html.twig' as macros %}
                            {{ macros.action_buttons('app_city_new','app_city_show', 'app_city_edit', 'city/_delete_form.html.twig', city, app.request.attributes.get('_route')) }}
                            {{ include('city/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</main>
{% endblock %}
