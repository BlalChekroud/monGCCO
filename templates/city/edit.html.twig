{% extends 'base.html.twig' %}

{% block title %}Modifier la ville{% endblock %}

{% block body %}
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Modifier la ville</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_city_index') }}">Gestion des ville</a></li>
          <li class="breadcrumb-item active">Modification</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10 col-xl-10">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Les nouvelles informations sur la ville</h5>

              {{ include('city/_form.html.twig') }}

            </div>
            <div class="card-footer d-flex justify-content-between">
              <div>
                <a href="{{ path('app_city_index') }}" class="btn btn-sm btn-outline-secondary mx-1" title="Retour vers la consultation des villes">Retour</a>
              </div>
              <div class="d-flex justify-content-end">
                {% import 'macros/btn_actions_macros.html.twig' as macros %}
                {{ macros.action_buttons('app_city_new','app_city_show', 'app_city_edit', 'city/_delete_form.html.twig', city, app.request.attributes.get('_route'), false) }}
                {{ include('city/_delete_form.html.twig') }}
              </div>
            </div>
          </div>

        </div>

      </div>
    </section>

  </main><!-- End #main -->
{% endblock %}
