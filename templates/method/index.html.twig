{% extends 'base.html.twig' %}

{% block title %}Consultation des méthodes{% endblock %}

{% block body %}
    <main id="main" class="main">

        <div class="pagetitle">
        <h1>Consultation des méthodes de comptage</h1>
        <nav>
            <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
            <li class="breadcrumb-item active">Gestion des méthodes de comptage</li>
            </ol>
        </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Listes</h5>

                            <div id="printableArea">
                                <table class="table datatable">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Méthode</th>
                                            <th>Crée le</th>
                                            <th>Dernière mise à jour le</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for method in methods %}
                                        <tr>
                                            <td>{{ method.id }}</td>
                                            <td>{{ method.label }}</td>
                                            <td>{{ method.createdAt ? method.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>{{ method.updatedAt ? method.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>
                                                <div class="d-flex justify-content-end">
                                                    <a href="{{ path('app_method_show', {'id': method.id}) }}" class="btn btn-success btn-sm bi bi-card-text mx-2" title="Détail"></a>
                                                    <a href="{{ path('app_method_edit', {'id': method.id}) }}" class="btn btn-primary btn-sm bi bi-pencil-square mx-2" title="Modifier"></a>
                                                    {{ include('method/_delete_form.html.twig') }}
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="5">Aucun enregistrement trouvé</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <div>
                                <a href="{{ path('app_method_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Créer une méthode</a>
                                <a href="{{ path('app_counting_campaign_index') }}" class="btn btn-outline-info btn-sm bi bi-list-task mx-1" title="Voir la liste des campagnes de comptage"> Consultation des campagnes</a>
                            </div>
                            <div>
                                <button id="printButton" class="btn btn-secondary btn-sm bi bi-printer" title="Imprimer"></button>
                                <a href="#" class="btn btn-secondary btn-sm bi bi-folder" title="Exporter en CSV"></a>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </section>
