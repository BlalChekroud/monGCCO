{% if is_granted('ROLE_ADMIN') %}
    <form method="post" action="{{ path('app_method_delete', {'id': method.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ method.id) }}">
        <button class="btn btn-danger btn-sm bi bi-trash-fill mx-2" title="Supprimer la méthode"></button>
    </form>
{% endif %}