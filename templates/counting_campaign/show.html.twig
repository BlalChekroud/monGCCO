{% extends 'base.html.twig' %}

{% block title %}Campagne de comptage{% endblock %}

{% block body %}

<main id="main" class="main">

    <div class="pagetitle">
      <h1>Détail d'une campagne de comptage</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_counting_campaign_index') }}">Gestion des campagnes</a></li>
          <li class="breadcrumb-item active">Détail</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">

                <div class="card">
                  <div id="printableArea">
                    <div class="card-body">
                        <h5 class="card-title">Détail</h5>

                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Nom de la campagne</th>
                                    <td>{{ counting_campaign.campaignName }}</td>
                                </tr>
                                <tr>
                                    <th>Etat de la campagne</th>
                                    <td>
                                        {% if counting_campaign.campaignStatus.label == 'En attente' %}
                                            <div class="btn-status btn btn-info" role="status">
                                            <i class="bi bi-circle-fill"></i>
                                            {{ counting_campaign.campaignStatus.label }}
                                            </div>
                                            {% elseif counting_campaign.campaignStatus.label == 'En cours' %}
                                            <div class="btn-status btn btn-primary" role="status">
                                                <i class="bi bi-circle-fill"></i>
                                                {{ counting_campaign.campaignStatus.label }}
                                            </div>
                                            {% elseif counting_campaign.campaignStatus.label == 'Terminé' %}
                                            <div class="btn-status btn btn-success">
                                                <i class="bi bi-check-circle"> </i>
                                            </div>
                                            {{ counting_campaign.campaignStatus.label }}
                                            {% elseif counting_campaign.campaignStatus.label == 'Annulé' %}
                                            <div class="btn-status btn btn-dark">
                                                <i class="bi bi-x-lg"> </i>
                                                {{ counting_campaign.campaignStatus.label }}
                                            </div>
                                            {% elseif counting_campaign.campaignStatus.label == 'Erreur' %}
                                            <div class="btn-status btn btn-warning">
                                                <i class="bi bi-exclamation-triangle"> </i>
                                                {{ counting_campaign.campaignStatus.label }}
                                            </div>
                                            {% elseif counting_campaign.campaignStatus.label == 'Validé' %}
                                            <div class="btn-status btn btn-success">
                                                <i class="bi bi-check-circle"> </i>
                                                {{ counting_campaign.campaignStatus.label }}
                                            </div>
                                            {% elseif counting_campaign.campaignStatus.label == 'Rejeté' %}
                                            <div class="btn-status btn btn-danger">
                                                <i class="bi bi-exclamation-triangle"> </i>
                                                {{ counting_campaign.campaignStatus.label }}
                                            </div>
                                            {% elseif counting_campaign.campaignStatus.label == 'Suspens' %}
                                            <div class="btn-status btn btn-secondary" role="status">
                                                <i class="bi bi-circle-fill"></i>
                                                {{ counting_campaign.campaignStatus.label }}
                                            </div>
                                            {% else %} 
                                            {{ counting_campaign.campaignStatus.label }}
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Date de début</th>
                                    <td>{{ counting_campaign.startDate ? counting_campaign.startDate|date('d-m-Y H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Date de fin</th>
                                    <td>{{ counting_campaign.endDate ? counting_campaign.endDate|date('d-m-Y H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Crée le</th>
                                    <td>{{ counting_campaign.createdAt ? counting_campaign.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Dernière mise à jour le</th>
                                    <td>{{ counting_campaign.updatedAt ? counting_campaign.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Crée par</th>
                                    <td>{{ counting_campaign.createdBy.name }} {{ counting_campaign.createdBy.lastName }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ counting_campaign.description }}</td>
                                </tr>
                                <tr>
                                    <th>Groupes</th>
                                    <td>
                                        <ol>
                                            <div class="accordion accordion-flush" id="accordionFlushExample">
                                                {% set sorted_groups = counting_campaign.agentsGroups|sort((a, b) => a.groupName <=> b.groupName) %}

                                                {% for group in sorted_groups %}
                                                    <div class="accordion-item">
                                                        <h2 class="accordion-header" id="flush-heading{{ loop.index }}">
                                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse{{ loop.index }}" aria-expanded="false" aria-controls="flush-collapse{{ loop.index }}">
                                                                {{ group.groupName }}
                                                            </button>
                                                        </h2>
                                                        <div id="flush-collapse{{ loop.index }}" class="accordion-collapse collapse" aria-labelledby="flush-heading{{ loop.index }}" data-bs-parent="#accordionFlushExample">
                                                            <div class="accordion-body">
                                                                <h6><b>Chef d'équipe:</b> {{ group.leader.name }} {{ group.leader.lastName }}</h6>
                                                                <h6><b>Membres d'équipe:</b></h6>
                                                                {% if group.groupMember|length > 0 %}
                                                                    <ul>
                                                                        {% for agent in group.groupMember %}
                                                                            <li>{{ agent.name }} {{ agent.lastName }}</li>
                                                                        {% endfor %}
                                                                    </ul>
                                                                {% else %}
                                                                    <p>Aucun membre trouvé</p>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% else %}
                                                    <p>Aucune enregistrement trouvé</p>
                                                {% endfor %}
                                            </div><!-- End Accordion without outline borders -->
                                        </ol>

                                    </td>
                                </tr>
                                <tr>
                                    <th>Les sites du campagne</th>
                                    <td>
                                        <table class="table table-striped">
                                            <thead>
                                            {% set sorted_sites = counting_campaign.siteCollection|sort((a, b) => a.siteName <=> b.siteName) %}
                                            <tr>
                                                <th scope="col">Nom du site</th>
                                                <th scope="col">Ville/Pays</th>
                                                <th scope="col">Action</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                                {% for site in sorted_sites %}
                                                    <tr>
                                                        <td>{{ site.siteName }}</td>
                                                        <td>{{ site.city.name }}/{{ site.city.country.name }}</td>
                                                        <td>
                                                            <div class="col text-end">
                                                                {% set currentDate = "now"|date('d-m-Y H:i:s') %}

                                                                {% if counting_campaign.startDate|date('d-m-Y H:i:s') <= currentDate %}
                                                                    {% if existingConditions[site.id] is not empty %}
                                                                        <a href="{{ path('app_collected_data_new') }}" class="btn btn-primary btn-lg">
                                                                            Collecter <i class="bi bi-arrow-bar-right">
                                                                                <div class="spinner-grow spinner-grow-sm text-light" role="status"></div>
                                                                            </i>
                                                                        </a>
                                                                    {% else %}
                                                                        <a href="{{ path('app_environmental_conditions_new', {'siteId': site.id, 'campaignId': counting_campaign.id}) }}" class="btn btn-warning btn-lg">
                                                                            Ajouter Conditions Environnementales de collecte
                                                                        </a>
                                                                    {% endif %}
                                                                {# {% else %}
                                                                    <code>
                                                                        Vous ne pouvez pas commencer à collecter avant : 
                                                                        {{ counting_campaign.startDate ? counting_campaign.startDate|date('d-m-Y H:i:s') : '' }}
                                                                    </code> #}
                                                                {% endif %}
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    <tr>
                                                        <td><p colspan="6">Aucune enregistrement trouvé</p></td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                  </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col text-end my-4">
                                {% set currentDate = "now"|date('d-m-Y H:i:s') %}
                                {% if counting_campaign.startDate|date('d-m-Y H:i:s') > currentDate %}
                                    <code>Vous ne pouvez pas commencer à collecter avant : {{ counting_campaign.startDate ? counting_campaign.startDate|date('d-m-Y H:i:s') : '' }}</code>
                                {% endif %}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 d-flex justtify-content-end">
                                <a href="{{ path('app_counting_campaign_index') }}" class="btn btn-offline-light btn-sm bi bi-arrow-return-left"> retour vers la liste</a>
                                <a href="{{ path('app_counting_campaign_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Créer une nouvelle campagne</a>
                                <a href="{{ path('app_counting_campaign_edit', {'id': counting_campaign.id}) }}" class="btn-action bi bi-pencil-square btn btn-outline-primary btn-sm mx-1"> Modifier</a>
                                 {{ include('counting_campaign/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </section>
    <div class="alert border-light alert-dismissible fade show" role="alert">
      <!-- Card with header and footer -->
      <div class="card">
        <div class="card-footer">
          <button id="printButton" class="btn btn-light bi bi-printer"> Imprimer</button> 
          <button type="button" class="btn btn-light"><i class="bi bi-folder"> </i>Exporter en CSV</button>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div><!-- End Card with header and footer -->
    </div>
</main>
{% endblock %}
