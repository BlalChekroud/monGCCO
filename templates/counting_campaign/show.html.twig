{% extends 'base.html.twig' %}

{% block title %}Campagne de comptage{% endblock %}

{% block body %}

<main id="main" class="main">

    <div class="pagetitle">
      <h1>Détail d'une collection de sites</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_counting_campaign_index') }}">Gestion des campagnes</a></li>
          <li class="breadcrumb-item active">Détail</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            Détail
                        </h5>

                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Nome de la campagne</th>
                                    <td>{{ counting_campaign.campaignName }}</td>
                                </tr>
                                <tr>
                                    <th>Date de début</th>
                                    <td>{{ counting_campaign.startDate ? counting_campaign.startDate|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Date de fin</th>
                                    <td>{{ counting_campaign.endDate ? counting_campaign.endDate|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Crée le</th>
                                    <td>{{ counting_campaign.createdAt ? counting_campaign.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Dernière mise à jour le</th>
                                    <td>{{ counting_campaign.updatedAt ? counting_campaign.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Les sites du campagne</th>
                                    <td>
                                        <ol>
                                            {% for site in counting_campaign.siteCollection %}
                                                <li>
                                                    {{ site.siteName}} ({{ site.region}})
                                                </li>
                                            {% else %}
                                                <p colspan="7">Aucune enregistrement trouvé</p>
                                            {% endfor %}
                                        </ol>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="row">
                            <div class="col-lg-3">
                                <a href="{{ path('app_counting_campaign_index') }}" class="btn btn-outline-secondary btn-sm bi bi-arrow-return-left"> retour vers la liste</a>
                            </div>
                            <div class="col-lg-2">
                                <a href="{{ path('app_counting_campaign_edit', {id: counting_campaign.id}) }}" class="bi bi-pencil-square btn btn-outline-warning btn-sm"> Modifier</a>
                            </div>
                            <div class="col-lg-2">
                                {{ include('counting_campaign/_delete_form.html.twig') }}
                            </div>
                            <div class="col-lg-4">
                                <a href="{{ path('app_counting_campaign_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted">
                                    Créer une nouvelle campagne
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
