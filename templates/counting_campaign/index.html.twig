{% extends 'base.html.twig' %}

{% block title %}Consultation des campagnes{% endblock %}

{% block body %}

<main id="main" class="main">

    <div class="pagetitle">
      <h1>Consultation des campagnes</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
          <li class="breadcrumb-item active">Gestion des campagnes</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Listes</h5>

              <div id="printableArea">
                <!-- Table with stripped rows -->
                <table class="table datatable">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Campagne</th>
                      <th>Date de début</th>
                      <th>Date de fin</th>
                      <th>Etat</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for counting_campaign in counting_campaigns %}
                      <tr>
                        <td>{{ counting_campaign.id }}</td>
                        <td>{{ counting_campaign.campaignName }}</td>
                        <td>{{ counting_campaign.startDate ? counting_campaign.startDate|date('d-m-Y') : '' }}</td>
                        <td>{{ counting_campaign.endDate ? counting_campaign.endDate|date('d-m-Y') : '' }}</td>
                        <td>
                          {% set status_classes = {
                            'En attente': 'info',
                            'En cours': 'primary',
                            'Terminé': 'light',
                            'Annulé': 'dark',
                            'Erreur': 'warning',
                            'Validé': 'success',
                            'Suspens': 'secondary'
                          } %}
                          <div class="btn-status btn btn-{{ status_classes[counting_campaign.campaignStatus] ?? 'secondary' }}">
                            <i class="bi bi-circle-fill"></i>
                            {{ counting_campaign.campaignStatus }}
                          </div>
                        </td>
                        <td>
                          <div class="d-flex justtify-content-end">
                            <a href="{{ path('app_counting_campaign_show', {'id': counting_campaign.id}) }}" class="btn-action btn btn-outline-success btn-sm bi bi-card-text mx-2"> Détail</a>
                            <a href="{{ path('app_counting_campaign_edit', {'id': counting_campaign.id}) }}" class="btn-action bi bi-pencil-square btn btn-outline-primary btn-sm mx-2"> Modifier</a>
                            {{ include('counting_campaign/_delete_form.html.twig') }}
                          </div>
                        </td>
                      </tr>
                    {% else %}
                      <tr>
                        <td colspan="7">Aucun enregistrement trouvé</td>
                      </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <!-- End Table with stripped rows -->
              </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
              <div class="d-flex justtify-content-end">
                  <a href="{{ path('app_counting_campaign_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Créer une campagne</a>
                  <a href="{{ path('app_site_collection_new') }}" class="btn btn-outline-info btn-sm bi bi bi-geo-alt-fill"> Créer un site de collecte</a>
              </div>
              <div>
                <button id="printButton" class="btn btn-sm btn-outline-success bi bi-printer"> Imprimer</button>
                <a href="#" class="btn btn-sm btn-outline-info bi bi-folder"> Exporter CSV</a>
              </div>
            </div>

          </div>

        </div>
      </div>
    </section>
</main><!-- End #main -->
{% endblock %}
