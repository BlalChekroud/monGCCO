{% extends 'base.html.twig' %}

{% block title %}Famille des espèces{% endblock %}

{% block body %}

<main id="main" class="main">

    <div class="pagetitle">
      <h1>Détail d'une famille d'espèces</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_bird_family_index') }}">Gestion des familles</a></li>
          <li class="breadcrumb-item active">Détail</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                     <div id="printableArea">
                        <h5 class="card-title">
                            Détail
                        </h5>

                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Nom de la famille :</th>
                                    <td>{{ bird_family.getFamilyName() }}</td>
                                </tr>
                                <tr>
                                    <th>Famille :</th>
                                    <td>{{ bird_family.getFamily() }}</td>
                                </tr>
                                <tr>
                                    <th>Ordre :</th>
                                    <td>{{ bird_family.getOrdre() }}</td>
                                </tr>
                                <tr>
                                    <th>Sous-famille :</th>
                                    <td>{{ bird_family.getSubFamily() }}</td>
                                </tr>
                                <tr>
                                    <th>Tribu :</th>
                                    <td>{{ bird_family.getTribe() }}</td>
                                </tr>
                                <tr>
                                    <th>Créé le</th>
                                    <td>{{ bird_family.createdAt ? bird_family.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Dernière mise à jour le</th>
                                    <td>{{ bird_family.updatedAt ? bird_family.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
                     </div>

                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 d-flex justify-content-between">
                                <div>
                                    <a href="{{ path('app_bird_family_index') }}" class="btn btn-sm btn-outline-secondary mx-1" title="Retour vers consultation des famille">Retour</a>
                                    <a href="{{ path('app_bird_family_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Créer nouvelle famille</a>
                                </div>
                                <div class="d-flex justify-content-end">
                                    {% import 'macros/btn_actions_macros.html.twig' as macros %}
                                    {{ macros.action_buttons('app_bird_family_edit', 'bird_family/_delete_form.html.twig', bird_family) }}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</main>
{% endblock %}
