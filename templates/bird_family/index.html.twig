{% extends 'base.html.twig' %}

{% block title %}Les familles des oiseaux{% endblock %}

{% block body %}

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Familles des oiseaux</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
          <li class="breadcrumb-item active">Gestion des Familles</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Listes</h5>
             <div id="printableArea">
              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Nom de famille</th>
                    <th>Famille</th>
                    <th>Sous famille</th>
                    <th>Date d'ajout</th>
                    <th>Action</th>
                </thead>
                <tbody>
                {% for bird_family in bird_families %}
                  <tr>
                    <td>{{ bird_family.getID() }}</td>
                    <td>{{ bird_family.getFamilyName() }}</td>
                    <td>{{ bird_family.getFamily() }}</td>
                    <td>{{ bird_family.getSubFamily() }}</td>
                    <td>{{ bird_family.getCreatedAt()| date('d-m-Y') }}</td>
                    <td>
                      <div class="d-flex justify-content-end">
                        {% import 'macros/btn_actions_macros.html.twig' as macros %}
                        {{ macros.action_buttons('app_bird_family_show', 'app_bird_family_edit', 'bird_family/_delete_form.html.twig', bird_family, app.request.attributes.get('_route')) }}
                        {{ include('bird_family/_delete_form.html.twig') }}
                      </div>
                    </td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="7">Aucun enregistrement trouvé</td>
                  </tr>
                {% endfor %}
                  
                </tbody>
              </table>
              <!-- End Table with stripped rows -->    
             </div>          
              
            </div>
            <div class="card-footer">
              <a href="{{ path('app_bird_family_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted"> Créer une famille</a>
              <a href="{{ path('app_bird_species_index') }}" class="btn btn-outline-info btn-sm bi bi-list-task mx-3"> Consultation des espèces</a>
              <a href="{{ path('app_bird_species_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted"> Créer nouvelle espèce</a>
            </div>
          </div>

        </div>
      </div>
    </section>

    {% import 'macros/form_macros.html.twig' as form_macros %}

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    {{ form_macros.csv_import_form(form, 'app_bird_family_index') }}
                </div>
            </div>
        </div>
    </section>

    {% if headers is defined and rows is defined %}
        {{ form_macros.csv_modal(headers, rows, csvData, 'app_bird_family_index', ['Family name', 'Family', 'Ordre']) }}
    {% endif %}


  </main><!-- End #main -->
{% endblock %}
