{% extends 'base.html.twig' %}

{% block title %}Groupe d'agents{% endblock %}

{% block body %}
<main id="main" class="main">

    <div class="pagetitle">
      <h1>Détail d'un groupe d'agents</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_agents_group_index') }}">Gestion des groupes</a></li>
          <li class="breadcrumb-item active">Détail</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                     <div id="printableArea">
                        <h5 class="card-title">
                            Détail
                        </h5>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Nom du groupe</th>
                                    <td>{{ agents_group.groupName }}</td>
                                </tr>
                                <tr>
                                    <th>Pays</th>
                                    <td>{{ agents_group.country.name }}</td>
                                </tr>
                                <tr>
                                    <th>Membres du groupe</th>
                                    <td>
                                        <ol>
                                            {% set sorted_group = agents_group.groupMember|sort((a, b) => a.name <=> b.name) %}

                                            {% for member in sorted_group %}
                                                <li>
                                                    {{ member.name }} {{ member.lastName }}
                                                </li>
                                            {% else %}
                                                <p colspan="7">Aucun enregistrement trouvé</p>
                                            {% endfor %}
                                        </ol>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Chef du groupe</th>
                                    <td>
                                        {{ agents_group.leader.name }} {{ agents_group.leader.lastName }} <h6>({{ agents_group.leader.email }})</h6>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Crée par</th>
                                    <td>
                                        {% if agents_group.createdBy is not null %}
                                            {{ agents_group.createdBy.getEmail() }}
                                        {% else %}
                                            <span>Aucun</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Créé le</th>
                                    <td>{{ agents_group.createdAt ? agents_group.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Dernière mise à jour le</th>
                                    <td>{{ agents_group.updatedAt ? agents_group.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
                     </div>

                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <div>
                            <a href="{{ path('app_agents_group_index') }}" class="btn btn-sm btn-outline-secondary mx-1" title="Retour vers la consultation des groupes d'agents">Retour</a>
                            <a href="{{ path('app_agents_group_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Créer un groupe</a>
                        </div>
                        <div class="d-flex justify-content-end">
                            {% import 'macros/btn_actions_macros.html.twig' as macros %}
                            {{ macros.action_buttons('app_agents_group_new','app_agents_group_show', 'app_agents_group_edit', 'agents_group/_delete_form.html.twig', agents_group, app.request.attributes.get('_route')) }}
                            {{ include('agents_group/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</main>
{% endblock %}
