{% extends 'base.html.twig' %}

{% block title %}Nouveau site de collecte{% endblock %}

{% block body %}

<main id="main" class="main">

    <div class="pagetitle">
      <h1>Créer un nouveau Site de collecte</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_site_collection_index') }}">Gestion des sites</a></li>
