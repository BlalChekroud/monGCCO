{% extends 'base.html.twig' %}

{% block title %}Consultation des sites{% endblock %}

{% block body %}
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Collection des sites</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
          <li class="breadcrumb-item active">Gestion des sites</li>
          {# <li class="breadcrumb-item active">Consultation</li> #}
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Listes</h5>

              <!-- Table with stripped rows -->
              <table class="table">
                  <thead>
                      <tr>
                          <th>#</th>
                          <th>Nom du site</th>
                          <th>Crée le</th>
                          <th>Région</th>
                          <th>Nom du site parent</th>
                          <th>Actions</th>
                      </tr>
                  </thead>
                  <tbody>
                  {% for site_collection in site_collections %}
                      <tr>
                          <td>{{ site_collection.id }}</td>
                          <td>{{ site_collection.siteName }}</td>
                          <td>{{ site_collection.createdAt ? site_collection.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                          <td>{{ site_collection.region }}</td>
                          <td>{{ site_collection.parentSiteName }}</td>
                          <td>
                              <div class="d-flex justtify-content-end">
                                    <a href="{{ path('app_site_collection_show', {'id': site_collection.id}) }}" class="btn btn-outline-secondary btn-sm bi bi-card-text mx-2"> Détail</a>
                                    <a href="{{ path('app_site_collection_edit', {'id': site_collection.id}) }}" class="bi bi-pencil-square btn btn-outline-warning btn-sm mx-2"> Modifier</a>
                                    {{ include('site_collection/_delete_form.html.twig') }}
                              </div>
                          </td>
                      </tr>
                  {% else %}
                      <tr>
                          <td colspan="14">Aucun enregistrement trouvé</td>
                      </tr>
                  {% endfor %}
                  </tbody>
              </table>
              <div class="row">
                <div class="col-lg-4">
                  <a href="{{ path('app_site_collection_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-fill">
                    Créer nouvelle collection de sites
                  </a>
                </div>
                <div class="col-lg-5">
                  <a href="{{ path('app_counting_campaign_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted  mx-3">
                    Créer une nouvelle campagne
                  </a>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->
{% endblock %}
