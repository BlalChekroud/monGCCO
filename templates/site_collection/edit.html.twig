{% extends 'base.html.twig' %}

{% block title %}Modification de la site{% endblock %}

{% block body %}

<main id="main" class="main">

    <div class="pagetitle">
      <h1>Modification de site de collecte</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_site_collection_index') }}">Gestion des sites</a></li>
          <li class="breadcrumb-item active">Modification</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-10 col-xl-10">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Modifier</h5>
                        {{ include('site_collection/_form.html.twig', {'button_label': ' Mise à jour'}) }}
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <div>
                            <a href="{{ path('app_site_collection_index') }}" class="btn btn-sm btn-outline-secondary mx-1" title="Retour vers la consultation des site">Retour</a>
                            <a href="{{ path('app_site_collection_new') }}" class="btn btn-outline-info btn-sm bi bi bi-geo-alt-fill mx-2"> Créer un site de collecte</a>
                        </div>
                        <div class="d-flex justify-content-end">
                            {% import 'macros/btn_actions_macros.html.twig' as macros %}
                            {{ macros.action_buttons('app_site_collection_new','app_site_collection_show', 'app_site_collection_edit', 'site_collection/_delete_form.html.twig', site_collection, app.request.attributes.get('_route'), false) }}
                            {{ include('site_collection/_delete_form.html.twig') }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
