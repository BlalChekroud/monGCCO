{% extends 'base.html.twig' %}

{% block title %}Consultation des pays{% endblock %}

{% block body %}
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Les pays</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
          <li class="breadcrumb-item active">Gestion des pays</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Listes</h5>
             <div id="printableArea">
                <!-- Table with stripped rows -->
                <table class="table datatable">
                    <thead>
                        <tr>
                            <th>Pays</th>
                            <th>Iso2</th>
                            <th>Les régions</th>
                            <th>Crée le</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for country in countries %}
                        <tr>
                            <td>
                                <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ country.id }}" aria-expanded="false" aria-controls="collapse{{ country.id }}" title="Voir les villes">
                                    {{ country.name }}
                                </button>
                            </td>
                            <td>{{ country.iso2 }}</td>
                            <td>
                                <div class="collapse" id="collapse{{ country.id }}">
                                    <div class="accordion-body">
                                        {% if country.regions|length > 0 %}
                                            {% set sorted_regions = country.regions|sort((a, b) => a.name <=> b.name) %}
                                            <ul>
                                                {% for region in sorted_regions %}
                                                    <li>{{ region.name }}</li>
                                                {% endfor %}
                                            </ul>
                                        {% else %}
                                            <p>Aucune région</p>
                                        {% endif %}

                                        {# {% if country.city|length > 0 %}
                                            {% set sorted_cities = country.city|sort((a, b) => a.name <=> b.name) %}
                                            <ul>
                                                {% for city in sorted_cities %}
                                                    <li>{{ city.name }}</li>
                                                {% endfor %}
                                            </ul>
                                        {% else %}
                                            <p>Aucune ville</p>
                                        {% endif %} #}
                                    </div>
                                </div>
                            </td>
                            <td>{{ country.createdAt ? country.createdAt|date('d-m-Y') : '' }}</td>
                            <td>
                                <div class="d-flex justtify-content-end">
                                    <a href="{{ path('app_country_show', {'id': country.id}) }}" class="btn-action btn btn-outline-success btn-sm bi bi-card-text mx-1"> Détail</a>
                                    <a href="{{ path('app_country_edit', {'id': country.id}) }}" class="btn-action bi bi-pencil-square btn btn-outline-primary btn-sm mx-1"> Modifier</a>
                                    {{ include('country/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
              <!-- End Table with stripped rows -->    
             </div>          
              
            </div>
            <div class="card-footer">
              <a href="{{ path('app_country_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted"> Créer un nouveau pays</a>
              <a href="{{ path('app_region_index') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Liste des régions</a>
              <a href="{{ path('app_region_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Créer une nouvelle région</a>
              <a href="{{ path('app_city_index') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Liste des villes</a>
              <a href="{{ path('app_city_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted mx-1"> Créer une nouvelle ville</a>
            </div>
          </div>

        </div>
      </div>
    </section>
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        {# <h5 class="card-title">Importer un fichier CSV</h5> #}
                        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'id': 'csvForm'}}) }}
                            {{ form_row(form.csvFile, {
                                'attr': {
                                    'onchange': 'document.getElementById("csvForm").submit();'
                                }
                            }) }}
                        {{ form_end(form) }}
                    </div>
                    <div class="card-body">
                      <button id="printButton" class="btn btn-light bi bi-printer"> Imprimer</button> 
                      <button type="button" class="btn btn-light"><i class="bi bi-folder"> </i>Exporter en CSV</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% if headers is defined and rows is defined %}
        <!-- Modal -->
        <div class="modal fade" id="csvPreviewModal" tabindex="-1" aria-labelledby="csvPreviewModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="csvPreviewModalLabel">Aperçu du fichier CSV</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <h5 class="text-center"><b>NB:</b> Les colonnes <code>country</code> et <code>iso2</code> sont obligatoires.</h5>
                    <div class="modal-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    {% for header in headers %}
                                        <th>{{ header }}</th>
                                    {% endfor %}
                                </tr>
                            </thead>
                            <tbody>
                                {% for row in rows %}
                                    <tr>
                                        {% for cell in row %}
                                            <td>{{ cell }}</td>
                                        {% endfor %}
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <form method="post" action="{{ path('app_country_index') }}">
                            <input type="hidden" name="csvData" value="{{ csvData|e('html_attr') }}">
                            <button type="submit" name="action" value="import" class="btn btn-outline-primary btn-sm bi bi-upload"> Importer</button>
                            <button type="button" class="btn btn-outline-dark btn-sm bi bi-x-square" data-bs-dismiss="modal"> Annuler</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Script to auto-show the modal after form submission -->
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                var myModal = new bootstrap.Modal(document.getElementById('csvPreviewModal'), {});
                myModal.show();
            });
        </script>
    {% endif %}

  </main><!-- End #main -->
{% endblock %}
