{% extends 'base.html.twig' %}

{% block title %}Pays{% endblock %}

{% block body %}
<main id="main" class="main">

    <div class="pagetitle">
      <h1>Détail du pays</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('home') }}"><i class="ri-home-4-line"></i> Accueil</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_country_index') }}">Gestion des pays</a></li>
          <li class="breadcrumb-item active">Détail</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                     <div id="printableArea">
                        <h5 class="card-title">Détail</h5>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Nom du pays :</th>
                                    <td>{{ country.name }}</td>
                                </tr>
                                <tr>
                                    <th>Code ISO2 :</th>
                                    <td>{{ country.iso2 }}</td>
                                </tr>
                                <tr>
                                    <th>Les régions :<h6 class="explanation mx-4">Ville(s)</h6></th>
                                    <td>
                                        {% if country.regions|length > 0 %}
                                            {% set sorted_regions = country.regions|sort((a, b) => a.name <=> b.name) %}
                                            <ul>
                                                {% for region in sorted_regions %}
                                                    <li>
                                                        {{ region.name }}
                                                        {% if region.cities|length > 0 %}
                                                            {% set sorted_cities = region.cities|sort((a, b) => a.name <=> b.name) %}
                                                            <ul>
                                                                {% for city in sorted_cities %}
                                                                    <li>
                                                                        <i>{{ city.name}}</i>
                                                                    </li>
                                                                {% endfor %}
                                                            </ul>
                                                        {% else %}
                                                            <p>Aucune ville</p>
                                                        {% endif %}
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% else %}
                                            <p>Aucune région</p>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Crée le</th>
                                    <td>{{ country.createdAt ? country.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Dernière mise à jour le</th>
                                    <td>{{ country.updatedAt ? country.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
                     </div>

                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <div>
                            <a href="{{ path('app_country_index') }}" class="btn btn-sm btn-outline-secondary mx-1" title="Retour vers la consultation des pays">Retour</a>
                            <a href="{{ path('app_country_new') }}" class="btn btn-outline-info btn-sm bi bi-plus-circle-dotted"> Ajouter un pays</a>
                        </div>
                        <div class="d-flex justify-content-end">
                            {% import 'macros/btn_actions_macros.html.twig' as macros %}
                            {{ macros.action_buttons('app_country_new','app_country_show', 'app_country_edit', 'country/_delete_form.html.twig', country, app.request.attributes.get('_route')) }}
                            {{ include('country/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}
